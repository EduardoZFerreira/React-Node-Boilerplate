generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  surname   String
  email     String
  password  String
  createdAt DateTime   @default(now())
  UserRole  UserRole[]

  @@map("users")
}

model Role {
  id       Int        @id @default(autoincrement())
  title    String
  UserRole UserRole[]

  @@map("roles")
}

model UserRole {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
  @@map("userRoles")
}
